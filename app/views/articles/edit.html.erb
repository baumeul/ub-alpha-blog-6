<h1 id="edit_article">EDIT ARTICLE</h1>

<% if @article.errors.any?  %>
	<h2>The following errors prevented the article from beeing saved!</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg|  %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end  %>

<%= form_with(model: @article, local: true) do |f| %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :created_by %><br>
		<%= f.text_field :created_by %>
	</p>
	<p>
		<%= f.label :updated_by %><br>
		<%= f.text_field :updated_by %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
	
<% end  %>

<p><%= link_to "Return to articles list", articles_path %></p>